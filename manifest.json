{
  "name": "Housing Shortcut",
  "version": "1.0.0.0",
  "permissions": ["tabs", "activeTab", "storage", "<all_urls>"],
  "background": {
    "scripts": ["constants/enum.js", "constants/constants.js", "background/icon-click.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["constants/enum.js", "constants/constants.js", "content/craigslist-post-info.js", "content/on-message.js"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_title": "Housing Shortcut"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
